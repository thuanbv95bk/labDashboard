{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "camelcase": ["error", { "properties": "always" }],
    "id-match": [
      "error",
      "^[a-z][a-zA-Z0-9]*$",
      {
        "properties": false,
        "onlyDeclarations": true
      }
    ],
    "new-cap": ["error", { "capIsNew": false }],
    "capitalize-comments": "error"
  }
}
